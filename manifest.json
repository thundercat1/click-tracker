{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "background",
    "http://*/",
    "https://*/"
  ],

  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

"content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],

    "browser_action": {
      "default_title": "Make this page red",
      "default_popup": "popup.html"
    },

    "manifest_version": 2
}